<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_centerHorizontal="true"
    android:id="@+id/rl">

    <ImageView
        android:id="@+id/gameover"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100px"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/gameover"/>

    <TextView
        android:id="@+id/score"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100px"
        android:background="#ffffff"
        android:textStyle="bold"
        android:text="Please place your ships:"
        android:fontFamily="sans-serif-medium"
        android:textSize="60px" />

    <Button
        android:id="@+id/readybt"
        android:layout_marginVertical="30px"
        android:layout_width="300px"
        android:layout_height="100px"
        android:layout_below="@id/score"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"
        android:backgroundTint="@color/black"
        android:textColor="#ffffff"
        android:textSize="40px"
        android:textStyle="bold"
        android:text="ready"
        android:onClick="loadBoard"/>
    <Button
        android:id="@+id/returnUserScreen"
        android:layout_alignParentBottom="true"
        android:layout_width="300px"
        android:layout_height="100px"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"
        android:backgroundTint="@color/black"
        android:textColor="#ffffff"
        android:textSize="40px"
        android:textStyle="bold"
        android:text="return"
        android:onClick="pressedReturn"/>
    <TableLayout
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/main_table"
        android:layout_marginTop="150dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    </TableLayout>
    <TextView
        android:id="@+id/computerchoice"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/main_table"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:textSize="60px"
        ></TextView>

    <ImageView
        android:id="@+id/bigShip"
        android:tag="bs1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="550dp"
        android:background="@drawable/bigship"/>
    <ImageView
        android:id="@+id/smallShip"
        android:tag="ss1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="230dp"
        android:background="@drawable/smallship"/>
    <ImageView
        android:id="@+id/smallShip2"
        android:tag="ss2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="600dp"
        android:background="@drawable/smallship"/>
    <ImageView
        android:id="@+id/bigShip2"
        android:tag="bs2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="605dp"
        android:background="@drawable/bigship"/>

</RelativeLayout>